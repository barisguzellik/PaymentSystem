@page
@model PaymentSystemForCustomer.SettingsModel
@{
    ViewData["Title"] = "Ayarlar";
}
<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Ayarlar</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
                <li class="breadcrumb-item active">Ayarlar</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form class="form" method="post">
                        <input type="hidden" asp-for="User.UserId" />
                        
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Ad
                            </label>
                            <div class="col-10">
                                <input asp-for="User.FirstName" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Soyad
                            </label>
                            <div class="col-10">
                                <input asp-for="User.LastName" type="text" class="form-control" required />
                            </div>
                        </div>
                        
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Parola
                            </label>
                            <div class="col-10">
                                <input asp-for="User.Password" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <button type="submit" asp-page-handler="Update" class="btn btn-info waves-effect m-t-10">KAYDET</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    function showMessage() {
        Swal.fire('Kaydet', 'Değişiklikler kaydedildi...', 'success');
    }

    function errorMessage() {
            Swal.fire('Kaydet','Bir hata oluştu...','error');
    }

    @Model.Message
</script>