@page
@model PaymentSystem.PaymentChannelAddModel
@{
    ViewData["Title"] = "Ödeme Kanalı Ekle";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Ödeme Kanalı Ekle</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
                <li class="breadcrumb-item"><a href="/PaymentChannel/List">Ödeme Kanalları</a></li>
                <li class="breadcrumb-item active">Ödeme Kanalı Ekle</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form class="form" method="post">
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Kanal Adı
                            </label>
                            <div class="col-10">
                                <input asp-for="PaymentChannel.Name" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Api Key
                            </label>
                            <div class="col-10">
                                <input asp-for="PaymentChannel.ApiKey" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Secret Key
                            </label>
                            <div class="col-10">
                                <input asp-for="PaymentChannel.SecretKey" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Base Url
                            </label>
                            <div class="col-10">
                                <input asp-for="PaymentChannel.BaseUrl" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Callback Url
                            </label>
                            <div class="col-10">
                                <input asp-for="PaymentChannel.CallbackUrl" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Callback Url (Customer)
                            </label>
                            <div class="col-10">
                                <input asp-for="PaymentChannel.CallbackUrlCustomer" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <button type="submit" name="submitButton" class="btn btn-info waves-effect m-t-10">KAYDET</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function showMessage() {
            Swal.fire('Kaydet','Değişiklikler kaydedildi...','success');
    }
    function errorMessage() {
            Swal.fire('Kaydet','Bir hata oluştu...','error');
    }

         @Model.Message
</script>