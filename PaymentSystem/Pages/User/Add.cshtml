@page
@model PaymentSystem.UserAddModel
@{
    ViewData["Title"] = "Üye Ekle";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">Üye Ekle</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
                <li class="breadcrumb-item"><a href="/User/List">Üyeler</a></li>
                <li class="breadcrumb-item active">Üye Ekle</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form class="form" method="post">
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Şirket
                            </label>
                            <div class="col-10">
                                <select asp-for="User.OrganizationId" class="form-control">
                                    @foreach (var item in Model.Organizations)
                                    {
                                        <option value="@item.OrganizationId">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Tip
                            </label>
                            <div class="col-10">
                                <select asp-for="User.UserType" asp-items="Html.GetEnumSelectList<PaymentSystem.Model.Enums.UserType>()" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Üye Adı
                            </label>
                            <div class="col-10">
                                <input asp-for="User.FirstName" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Üye Soyadı
                            </label>
                            <div class="col-10">
                                <input asp-for="User.LastName" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Kullanıcı Adı
                            </label>
                            <div class="col-10">
                                <input asp-for="User.UserName" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Parola
                            </label>
                            <div class="col-10">
                                <input asp-for="User.Password" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group m-t-20 row">
                            <label for="example-text-input" class="col-2 col-form-label">
                                Durum
                            </label>
                            <div class="col-10">
                                <select asp-for="User.Status" asp-items="Html.GetEnumSelectList<PaymentSystem.Model.Enums.Status>()" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-info waves-effect m-t-10">KAYDET</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function showMessage() {
            Swal.fire('Kaydet','Değişiklikler kaydedildi...','success');
    }
    function errorMessage() {
            Swal.fire('Kaydet','Bir hata oluştu...','error');
    }

         @Model.Message
</script>